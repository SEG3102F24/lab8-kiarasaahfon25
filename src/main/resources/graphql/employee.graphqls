type Query {
  employees: [Employee]
  employeeById(employeeId: ID!): Employee
}

type Employee {
  employeeId: ID!
  name: String!
  dateOfBirth: String!
  city: String!
  salary: Float!
  gender: String!
  email: String!
}

input CreateEmployeeInput {
    name: String!
    dateOfBirth: String!
    city: String!
    salary: Float!
    gender: String!
    email: String!
}


type Mutation {
  newEmployee(createEmployeeInput: CreateEmployeeInput!): Employee!
  updateEmployee(employeeId: ID!, createEmployeeInput: CreateEmployeeInput!): Employee!
  deleteEmployee(employeeId: ID!): Boolean
}
